    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Create Frames",
            "preLaunchTask": "Clean",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\index.js",
            "env": {
                "FFMPEG_PATH" : "./.build/ffmpeg.exe"
            }
            
        },
        {
            "type": "PowerShell", 
            "request": "launch", 
            "name": "Build Video-old", 
            "script": "./build.ps1", 
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "PowerShell", 
            "request": "launch", 
            "name": "Build Video", 
            "preLaunchTask":"CreateFrames",
            "script": "./build.ps1", 
            "cwd": "${workspaceRoot}"
        }
    ]
}